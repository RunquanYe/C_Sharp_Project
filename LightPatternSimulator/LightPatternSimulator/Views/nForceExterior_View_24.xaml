<UserControl x:Class="LightPatternSimulator.Views.nForceExterior_View24"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightPatternSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800" >

    <Grid >
        <Grid.Background>
            <!--<ImageBrush x:Name="display" ImageSource="{Binding LightbarViewModel.BoardImage}" Stretch="Uniform" />-->
            <ImageBrush x:Name="display" ImageSource="pack://application:,,,/image/product/Base_24.PNG" Stretch="Uniform" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="75,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="light11" Source="{Binding LightbarViewModel.Modules[0].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[0].Opacity}" Width="80" Height="80" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="light21" Source="{Binding LightbarViewModel.Modules[4].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[4].Opacity}" Width="80" Height="80" Grid.Row="2" Grid.Column="1" Margin="-65,0,0,0"/>

            <!--<Image x:Name="light11" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="0" Grid.Column="0" />
            <Image x:Name="light21" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="2" Grid.Column="1"  Margin="-65,0,0,0"/>-->

        </Grid>


        <Grid Grid.ColumnSpan="3" Width="325"  HorizontalAlignment="Center" Margin="0,-35,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="260"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light12" Source="{Binding LightbarViewModel.Modules[1].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[1].Opacity}" Width="80" Height="80" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="light22" Source="{Binding LightbarViewModel.Modules[5].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[5].Opacity}" Width="80" Height="80" Grid.Row="2" Grid.Column="0"/>

            <Image x:Name="light13" Source="{Binding LightbarViewModel.Modules[2].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[2].Opacity}" Width="80" Height="80" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="light23" Source="{Binding LightbarViewModel.Modules[6].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[6].Opacity}" Width="80" Height="80" Grid.Row="2" Grid.Column="1"/>

            <!--<Image x:Name="light12" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="light22" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="2" Grid.Column="0"/>

            <Image x:Name="light13" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="light23" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="2" Grid.Column="1"/>-->

        </Grid>

        <Grid Grid.Column="2" Margin="115,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light14" Source="{Binding LightbarViewModel.Modules[3].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[3].Opacity}" Width="80" Height="80" Grid.Row="0" Grid.Column="1" Margin="-65,0,0,0"/>
            <Image x:Name="light24" Source="{Binding LightbarViewModel.Modules[7].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[7].Opacity}" Width="80" Height="80"  Grid.Row="2" Grid.Column="0" />

            <!--<Image x:Name="light14" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80" Grid.Row="0" Grid.Column="1" Margin="-65,0,0,0"/>
            <Image x:Name="light24" Source="pack://application:,,,/image/color/red.PNG" Width="80" Height="80"  Grid.Row="2" Grid.Column="0" />-->
        </Grid>
    </Grid>
</UserControl>
