<UserControl x:Class="LightPatternSimulator.Views.nForceTrafficControl_View_Front8_RearNone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightPatternSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="display" ImageSource="{Binding LightbarViewModel.CurrentlySelectedLightbar.BoardImage}" Stretch="Uniform" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Width="560"  Margin="100,60,100,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="110"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light0" Source="{Binding LightbarViewModel.Modules[0].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[0].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="0"/>

            <Image x:Name="light1" Source="{Binding LightbarViewModel.Modules[1].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[1].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="1"/>

            <Image x:Name="light2" Source="{Binding LightbarViewModel.Modules[2].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[2].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="2"/>

            <Image x:Name="light3" Source="{Binding LightbarViewModel.Modules[3].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[3].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="3"/>

            <Image x:Name="light4" Source="{Binding LightbarViewModel.Modules[4].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[4].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="4"/>

            <Image x:Name="light5" Source="{Binding LightbarViewModel.Modules[5].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[5].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="5"/>

            <Image x:Name="light6" Source="{Binding LightbarViewModel.Modules[6].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[6].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="6"/>

            <Image x:Name="light7" Source="{Binding LightbarViewModel.Modules[7].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[7].Opacity}"  Width="90" Height="65" Grid.Row="0" Grid.Column="7"/>
            
        </Grid>
    </Grid>
</UserControl>
