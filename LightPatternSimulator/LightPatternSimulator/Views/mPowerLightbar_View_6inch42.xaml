<UserControl x:Class="LightPatternSimulator.Views.mPowerLightbar_View_6inch42"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightPatternSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush x:Name="display" ImageSource="{Binding LightbarViewModel.CurrentlySelectedLightbar.BoardImage}"  />
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="-30,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85"/>
                <ColumnDefinition Width="85"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light11" Source="{Binding LightbarViewModel.Modules[1].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[1].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="1" Margin="-80,0,0,0"/>
            <Image x:Name="light21" Source="{Binding LightbarViewModel.Modules[0].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[0].Opacity}" Width="85" Height="85"  Grid.Row="1" Grid.Column="0"/>
            <Image x:Name="light31" Source="{Binding LightbarViewModel.Modules[8].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[8].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="1" Margin="-80,0,0,0"/>
        </Grid>


        <Grid Grid.ColumnSpan="3" Width="560"  HorizontalAlignment="Center" Margin="100,2,100,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="175"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light12" Source="{Binding LightbarViewModel.Modules[2].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[2].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="0"/>
            <Image x:Name="light22" Source="{Binding LightbarViewModel.Modules[9].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[9].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="0"/>

            <Image x:Name="light13" Source="{Binding LightbarViewModel.Modules[3].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[3].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="light23" Source="{Binding LightbarViewModel.Modules[10].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[10].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="1"/>

            <Image x:Name="light14" Source="{Binding LightbarViewModel.Modules[4].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[4].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="2"/>
            <Image x:Name="light24" Source="{Binding LightbarViewModel.Modules[11].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[11].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="2"/>

            <Image x:Name="light15" Source="{Binding LightbarViewModel.Modules[5].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[5].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="3"/>
            <Image x:Name="light25" Source="{Binding LightbarViewModel.Modules[12].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[12].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="3"/>

            <Image x:Name="light16" Source="{Binding LightbarViewModel.Modules[6].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[6].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="4"/>
            <Image x:Name="light26" Source="{Binding LightbarViewModel.Modules[13].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[13].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="4"/>

        </Grid>

        <Grid Grid.Column="2" Margin="35,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="light17" Source="{Binding LightbarViewModel.Modules[7].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[7].Opacity}" Width="85" Height="85" Grid.Row="0" Grid.Column="0" />
            <Image x:Name="light27" Source="{Binding LightbarViewModel.Modules[15].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[15].Opacity}" Width="85" Height="85" Grid.Row="1" Grid.Column="1" Margin="-42,0,0,0"/>
            <Image x:Name="light37" Source="{Binding LightbarViewModel.Modules[14].MyBitmap}" Opacity="{Binding LightbarViewModel.Modules[14].Opacity}" Width="85" Height="85"  Grid.Row="2" Grid.Column="0" />
        </Grid>
    </Grid>

</UserControl>
